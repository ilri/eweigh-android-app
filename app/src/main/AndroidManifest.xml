<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.ilri.eweigh">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".accounts.RegisterActivity" />
        <activity android:name=".accounts.LoginActivity" />
        <activity android:name=".accounts.MyAccountActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".hg_lw.LiveWeightActivity" />
        <activity android:name=".hg_lw.SubmissionsActivity" />

        <activity android:name=".cattle.CattleActivity" />
        <activity
            android:name=".cattle.CattleViewActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".feeds.FeedsActivity" />
    </application>

</manifest>